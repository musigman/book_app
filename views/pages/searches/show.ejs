<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Your Search Results</title>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <main>
      <div>
        <% arrayOfBookObjects.forEach(book => { %>
          <form action="books" method="post">
            <img src="<%= book.imageURL %>" />
            <h2><%= book.title %></h2>
            <h3><%= book.authors %></h3>
            <p><%= book.description %></p>
            <!-- add button to save book here with the hidden form; all values are the same; book values the same, submit button has visible label "save book" -->
            <input type="hidden" name="title" value="<%= book.title %>">
            <input type="hidden" name="authors" value="<%= book.authors %>">
            <input type="hidden" name="imageURL" value="<%= book.imageURL %>">
            <input type="hidden" name="description" value="<%= book.description %>">
            <input type="hidden" name="isbn" value="<%= book.isbn %>">
            <!-- object
            title
            authors
            imageURL
            description
            isbn

            SQL row
            id
            title ,
            author (),
            image_url ,
            description ,
            isbn () -->
            <button type="submit">Save Book</button>
          </form>
        <% }) %>
      </div>
    </main>
  </body>
</html>